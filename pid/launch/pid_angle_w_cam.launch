<launch>

<include file="$(find camera)/launch/camera.launch"/>
<include file="$(find color_mask)/launch/yellow_mask.launch"/>
<include file="$(find object_centroid)/launch/yellow_centroid.launch"/>
<include file="$(find object_angle)/launch/yellow_angle.launch"/>


  <group ns="jetbot">

      <node pkg="pid" name="pid_errors_angle_node" type="pid_errors.py">
          <param name="SMART_ERROR" value="1"/>
          <param name="LIMIT" value="0.6"/>
          <param name="DESIRED" value="0"/>
          <remap from="in_topic" to="yellow_angle"/>
          <remap from="out_topic" to="pid_errors_angle"/>
      </node>

      <node pkg="pid" name="pid_control_angle_node" type="pid_control.py">
          <rosparam>
              PID/P: 0.14
              PID/I: 0.0005
              PID/D: 0.005
          </rosparam>

          <remap from="in_topic" to="pid_errors_angle"/>
          <remap from="out_topic" to="pid_control_angle"/>
      </node>

  </group>

</launch>
